<layout xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="projectItemDetailHeader" type="com.incubasys.formblok.projects.data.model.ProjectDetailItem"/>
    </data>
    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <TextView
                android:id="@+id/tvInfoPlaningLabel"
                tools:text="@string/planning_information"
                android:text="@{projectItemDetailHeader.upperText}"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentStart="true"
                android:textColor="?attr/colorPrimary"
                android:fontFamily="@font/visbycf_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>